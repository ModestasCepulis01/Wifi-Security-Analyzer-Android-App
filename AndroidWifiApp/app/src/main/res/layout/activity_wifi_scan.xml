<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkbg"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnScanWifi"
        style="@style/ShapeAppearanceOverlay.Material3.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="83dp"
        android:background="@drawable/scanbutton"
        android:text="Scan WiFi"
        android:textColor="#FFBC00"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="310dp"
        android:layout_height="288dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="217dp"
        app:layout_constraintBottom_toTopOf="@+id/btnScanWifi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </ListView>

    <ImageView
        android:id="@+id/yellowBorder"
        android:layout_width="320dp"
        android:layout_height="298dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="212dp"
        android:scaleType="fitXY"
        android:src="@drawable/yellowborder"
        app:layout_constraintBottom_toTopOf="@+id/btnScanWifi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/globeImg"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/btnScanWifi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellowBorder"
        app:srcCompat="@drawable/globe" />


</androidx.constraintlayout.widget.ConstraintLayout>
